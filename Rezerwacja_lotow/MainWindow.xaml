<Window x:Class="Rezerwacja_lotow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rezerwacja_lotow"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="950"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    

    <Grid Margin="0,-18,0,3" RenderTransformOrigin="0.498,0.613">
        <Grid.RowDefinitions>
            <RowDefinition Height="464.04"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto" MinHeight="1.673"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Adrian\Desktop\projekt\powitalna.png" Opacity="1"/>
        </Grid.Background>

        <TextBlock Text="Email:" 
                   FontSize="16" 
                   Margin="26,24,633,0" 
                   VerticalAlignment="Top" 
                   FontFamily="Cascadia Mono SemiBold" 
                   Height="16"/>

        <TextBox Name="txtEmail" 
                 Height="34" 
                 Margin="33,45,0,0" 
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left" Width="189"
                 BorderThickness="2"  
                 Background="White" 
                 Padding="0,6,0,0" FontFamily="Cascadia Mono SemiBold" FontSize="14"/>

        <TextBlock Text="Hasło:" 
                   FontSize="16" 
                   Margin="26,79,597,0" 
                   VerticalAlignment="Top" 
                   FontFamily="Cascadia Code SemiBold" 
                   Height="16"/>

        <PasswordBox Name="txtHaslo" 
                     Height="34" 
                     Margin="33,102,0,0" 
                     VerticalAlignment="Top" 
                     HorizontalAlignment="Left" Width="189"
                     BorderThickness="2"  
                     Background="White" 
                     Padding="0,8,0,2" FontFamily="Cascadia Code SemiBold"/>

        <Button Name="Loguj"
                Content="Zaloguj"
                FontFamily="Century Gothic"
                Foreground="white"
                Background="CornflowerBlue"
                BorderThickness="0"
                Padding="3"
                Click="Zapisz_Click"
                Margin="33,149,0,269"
                HorizontalAlignment="Left"
                Width="139">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Name="Gosc"
                Content="Załóż konto"
                FontFamily="Century Gothic"
                Foreground="white"
                Background="CornflowerBlue"
                BorderThickness="0"
                Padding="3"
                Click="Zapisz_Gosc"
                Margin="33,200,0,214"
                HorizontalAlignment="Left"
                Width="139">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
