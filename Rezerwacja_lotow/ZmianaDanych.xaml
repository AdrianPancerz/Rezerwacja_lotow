<Window x:Class="Rezerwacja_lotow.ZmianaDanych"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rezerwacja_lotow"
        mc:Ignorable="d"
        Title="Zmiana Danych" Height="510" Width="400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <!-- Corrected this line -->

    <Grid>
        <Grid Margin="20">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <!-- Opis i pole tekstowe dla Imienia -->
                <TextBlock Text="Imię:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                <TextBox x:Name="ImieTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

                <!-- Opis i pole tekstowe dla Nazwiska -->
                <TextBlock Text="Nazwisko:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                <TextBox x:Name="NazwiskoTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

                <!-- Opis i pole tekstowe dla Email -->
                <TextBlock Text="Email:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                <TextBox x:Name="EmailTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

                <!-- Opis i pole tekstowe dla Telefonu -->
                <TextBlock Text="Telefon (9 cyfr):" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                <TextBox x:Name="TelefonTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

                <!-- Opis i pole tekstowe dla Hasła -->
                <TextBlock Text="Hasło:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                <PasswordBox x:Name="HasloPasswordBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

                <!-- Przycisk dodania pasażera -->
                <Button Content="Zmień dane"
                        FontSize="14"
                        Background="CornflowerBlue"
                        Foreground="White"
                        Height="40"
                        Margin="0,20,0,0"
                        Click="ZapiszZmianyBtn_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
