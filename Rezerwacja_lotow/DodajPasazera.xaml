<Window x:Class="Rezerwacja_lotow.DodajPasazera"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj pasażera" Height="510" Width="400"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            
            <TextBlock Text="Imię:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
            <TextBox x:Name="ImieTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

            
            <TextBlock Text="Nazwisko:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
            <TextBox x:Name="NazwiskoTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

            
            <TextBlock Text="Email:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
            <TextBox x:Name="EmailTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>

            
            <TextBlock Text="Telefon:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
            <TextBox x:Name="TelefonTextBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>


          
            <TextBlock Text="Hasło:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
            <PasswordBox x:Name="HasloPasswordBox" FontSize="14" Height="30" Margin="0,0,0,15" Padding="0,5,0,5"/>
            
            

            
            <Button Content="Utwórz konto"
                    FontSize="14"
                    Background="CornflowerBlue"
                    Foreground="White"
                    Height="40"
                    Margin="0,20,0,0"
                    Click="DodajPasazeraBtn_Click">
              
            </Button>
        </StackPanel>
    </Grid>
</Window>
